<Page x:Class="client.pages.afterGameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="afterGameScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/client;component/images/trivia_bg.png"/>
        </Grid.Background>
        <Border Width="400" Height="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,75,300,0" BorderThickness="4" BorderBrush="Black" Background="SteelBlue">
            <TextBlock Name="place_text" Text="You Placed: "  FontSize="60" TextAlignment="Center" Foreground="White" VerticalAlignment="Center"/>
        </Border>

        <Border BorderThickness="2" BorderBrush="Black" Width="1200" Height="450" Margin="0,175,0,0">
            <StackPanel Name="Stats_panel"  Background="#aaffffff" Orientation="Horizontal" >

                <!-- add game rankings here-->
                
                
                <StackPanel Name="Usernames">
                    <Border Width="250" Height="60">
                        <TextBlock Text="Username" FontSize="25" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Border>

                    <Rectangle Height="2" Stroke="Black"/>
                </StackPanel>

                <Rectangle Height="450" Width="2" Stroke="Black"/>

                <StackPanel x:Name="scores">
                    <Border Width="200" Height="60">
                        <TextBlock Text="Score" FontSize="25" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <Rectangle Height="2" Stroke="Black"/>

                </StackPanel>
                    
                <Rectangle Height="450" Width="2" Stroke="Black"/>

                <StackPanel x:Name="correct_answers">
                    <Border Width="230" Height="60">
                        <TextBlock Text="Correct Answers" FontSize="25" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <Rectangle Height="2" Stroke="Black"/>

                </StackPanel>

                <Rectangle Height="450" Width="2" Stroke="Black"/>

                <StackPanel x:Name="wrong_answers">
                    <Border Width="230" Height="60">
                        <TextBlock Text="Wrong Answers" FontSize="25" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <Rectangle Height="2" Stroke="Black"/>

                </StackPanel>

                <Rectangle Height="450" Width="2" Stroke="Black"/>


                <StackPanel x:Name="average_time">
                    <Border Width="280" Height="60">
                        <TextBlock Text="Average Answer Time" FontSize="25" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <Rectangle Height="2" Stroke="Black"/>

                </StackPanel>
            </StackPanel>
        </Border>

        <Button Name="OUT" Content="Exit Game" FontSize="30" HorizontalAlignment="Center"  Width="175" Height="60" Margin="810,0,0,375" Background="MediumBlue" Foreground="White"/>
        <Frame Name="main_frame" />
    </Grid>
</Page>
