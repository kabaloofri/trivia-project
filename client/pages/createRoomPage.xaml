<Page x:Class="client.pages.createRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="createRoom">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/client;component/images/trivia_bg.png"/>
        </Grid.Background>
        <Border Width="300" Height="75" Margin="0 ,500 ,0 ,0" HorizontalAlignment="Center" VerticalAlignment="Center" Background="MediumPurple" BorderBrush="BlueViolet" BorderThickness="2">
            <Button Name ="createRoom"  Content="Create!" FontSize="40" FontWeight="Bold"  HorizontalAlignment="Stretch" Background="Transparent"/>
        </Border>
        <Border Width="400" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,75,0,0" Background="DeepSkyBlue" CornerRadius="20" BorderThickness="3" BorderBrush="LightSkyBlue">
            <TextBlock Text="Create Room" FontSize="55" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
                   

            <!-- num of players-->
            <Canvas Width="100" Height="500" Margin="-600,200,0,0">
                <Image Source= "pack://application:,,,/client;component/images/fieldCreateRoom.png" Width="300" Canvas.Top="0"/>
            <TextBlock Text="Max Players" FontSize="30"  FontWeight="Bold" Canvas.Top="30" Canvas.Left="70" />

            <TextBlock Name="numOfPlayers" Text = "5" FontSize="30" TextBlock.Foreground="Beige" Canvas.Top="90" Canvas.Right="-170"/>
                <Slider Name="numOfPlayers_slider"  Minimum = "1" Maximum = "20" Value="5"
 ValueChanged = "numOfPlayers_Changed"  Width="200" Canvas.Top="100" Canvas.Right="-140"/>


            <!-- room name-->
                <Image Source= "pack://application:,,,/client;component/images/fieldCreateRoom.png" Width="300" Canvas.Top="150" />
                <TextBlock Text="Room Name" FontSize="30"  FontWeight="Bold" Canvas.Top="180" Canvas.Right="-130"/>
                <TextBox Name="roomName_textBox" Width="200" Height="30" FontSize="20" Canvas.Top="260" Canvas.Right="-150" Background="#DDFFFFFF"/>
            </Canvas>
         
        
            <!-- time per question-->
        <Canvas Width="100" Height="500" Margin="100,200,0,0">
            <Image Source= "pack://application:,,,/client;component/images/fieldCreateRoom.png" Width="300" />
                <TextBlock Text="Time Per Quesion" FontSize="27" Canvas.Right="-160" Canvas.Top="30" FontWeight="Bold"/>
    
            <TextBlock Name="timePerQuestion" Text = "30" FontSize="30" TextBlock.Foreground="Beige" Canvas.Top="90" Canvas.Right="-175" />
            <Slider Name="timePerQuestion_slider" Minimum = "5" Maximum = "120" Value="30"
                ValueChanged = "timePerQuestion_Changed"  Width=" 200" Canvas.Top="100" Canvas.Right="-140"/>

            <!-- num of qouestion-->
                    <Image Source= "pack://application:,,,/client;component/images/fieldCreateRoom.png" Width="300" Canvas.Top="150"  VerticalAlignment="Center"/>
                    <TextBlock Text="Quesions Amount" FontSize="27"  Canvas.Top="185" Canvas.Right="-160" FontWeight="Bold"/>

                    <TextBlock Name = "NumOfQuestion" Canvas.Right="-180" Canvas.Top="240" Text = "10" FontSize="30" TextBlock.Foreground="Beige" />
                    <Slider Name="NumOfQuestions_slider" Minimum = "1" Maximum = "50" Value="10"
ValueChanged = "numOfQuestion_Changed"  Width=" 200" Canvas.Top="250" Canvas.Right="-140"/>
                </Canvas>
        
    </Grid>
</Page>
