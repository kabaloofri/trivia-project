<Page x:Class="WpfApp1.pages.joinRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="joinRoomPage">

    <Grid Name="main_Grid">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/client;component/images/trivia_bg.png"/>
        </Grid.Background>

        <TextBlock FontSize="50" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Text="Available Rooms:" Foreground="White" FontWeight="Bold" TextDecorations="Underline" FontFamily="{StaticResource Gotham_bold}"/>
        <StackPanel Name="stack_panel" Margin="0,120,0,0" Width="750" VerticalAlignment="Top" Height="500" Orientation="Vertical" >
            <!-- room buttons get added here from code behind -->
        </StackPanel>

        <Button Name="Select_Button" Content="Join!" Width="200" Height="50" Margin="0,500,0,0" VerticalAlignment="Center" FontSize="30" Background="Lime" FontWeight="Bold" FontFamily="{StaticResource Gotham_bold}">
            <Button.Resources>
                <Style TargetType="Button">
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12.5"/>
                        </Style>
                    </Style.Resources>
                </Style>
            </Button.Resources>
        </Button>
        
        <Frame Name="main_frame"/>
    </Grid>

</Page>
