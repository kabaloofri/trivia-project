<Page x:Class="client.pages.leaderboardsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="leaderboardsPage">

    <Grid Name="main_Grid">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/client;component/images/trivia_bg.png"/>
        </Grid.Background>

        <TextBlock FontSize="50" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0" Text="Leaderboard:" TextDecorations="Underline" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Gotham_bold}"/>

        <StackPanel Name="stack_panel" Margin="0,125,0,0"  VerticalAlignment="Top" Width="1000" Height="450" Orientation="Vertical">

            <Border BorderThickness="5" BorderBrush="DarkGoldenrod" Background="Gold" CornerRadius="30" Width="800" Opacity="0.8">
                <TextBlock x:Name="p1" Text="name   " VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Height="50"  FontWeight="Bold" Margin="0,10,0,0"/>
            </Border>

            <Border BorderThickness="5" BorderBrush="DarkSlateGray" Background="Silver" Margin="0,20,0,0" CornerRadius="30" Width="800" Opacity="0.8">
                <TextBlock x:Name="p2" Text="name   " VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" FontWeight="Bold"/>
            </Border>

            <Border BorderThickness="5" BorderBrush="SaddleBrown" Background="SandyBrown" Margin="0,20,0,0" CornerRadius="30" Width="800" Opacity="0.8">
                <TextBlock x:Name="p3" Text="name   " VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" FontWeight="Bold"/>
            </Border>

            <Border BorderThickness="5" BorderBrush="SteelBlue" Background="LightBlue" Margin="0,20,0,0" CornerRadius="30" Width="800" Opacity="0.8">
                <TextBlock x:Name="p4" Text="name   " VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" FontWeight="Bold"/>
            </Border>

            <Border BorderThickness="5" BorderBrush="SteelBlue" Background="LightBlue" Margin="0,20,0,0" CornerRadius="30" Width="800" Opacity="0.8">
                <TextBlock x:Name="p5" Text="name   " VerticalAlignment="Center" FontSize="30" HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" FontWeight="Bold"/>
            </Border>

        </StackPanel>


        <Image Source="pack://application:,,,/client;component/images/first_place.png" Height="50" Width="50" Margin="0,0,300,320"/>
        <Image Source="pack://application:,,,/client;component/images/second_place.png" Height="53" Width="50" Margin="0,0,300,145"/>
        <Image Source="pack://application:,,,/client;component/images/third_place.png" Height="50" Width="50" Margin="0,35,300,0"/>
        <Image Source="pack://application:,,,/client;component/images/forth_place.png" Height="50" Width="50" Margin="0,220,300,0"/>
        <Image Source="pack://application:,,,/client;component/images/fifth_place.png" Height="50" Width="50" Margin="0,400,300,0"/>
        
    </Grid>
</Page>
