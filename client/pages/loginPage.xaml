<Page x:Class="client.pages.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginPage">

    <Grid Name="main_grid">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/client;component/images/trivia_bg.png"/>
        </Grid.Background>

        <TextBlock Text="Welcome To Trivia!" HorizontalAlignment="Center" Height="75" Foreground="white" FontSize="50" Margin="0,0,0,375" FontWeight="Bold" TextDecorations="Underline"/>


        <Border BorderBrush="Black" BorderThickness="4" Width="400" Height="50" Margin="0,125,0,275" CornerRadius="15" Background="white" HorizontalAlignment="Center">
            <TextBox  Name="username_box" Background="Transparent" Text="Username" BorderBrush="Transparent" FontSize="20" VerticalContentAlignment="Center"/>
        </Border>

        <Border BorderBrush="Black" BorderThickness="4" Width="400" Height="50" Margin="0,225,0,175" CornerRadius="15" Background="white" HorizontalAlignment="Center">
            <PasswordBox  Name="password_box" Background="Transparent" BorderBrush="Transparent" FontSize="20" VerticalContentAlignment="Center"/>
        </Border>
        <TextBlock Name ="password_box2" Width="100" Height="100" FontSize="20" Text="Password" Margin="-260,120,0,0"/>

        <Border Name="email_border" BorderBrush="Black" BorderThickness="4" Width="400" Height="50" Margin="0,325,0,75" CornerRadius="15" Background="white" HorizontalAlignment="center">
            <TextBox Text="Email" Name="email_box" Background="Transparent" BorderBrush="Transparent" FontSize="20" Margin="0,5,0,0" />
        </Border>

        <Button Name="join_button" Content="Join!" FontSize="25" Width="200" Height="50" BorderBrush="Black" BorderThickness="2" VerticalAlignment="Bottom" Background="MediumPurple" Foreground="White" Margin="0,0,0,100"/>
        <Button Name="signup_button" Content="Sign Up" FontSize="25" Width="200" Height="50" BorderBrush="Transparent" VerticalAlignment="Bottom" Background="Transparent" Foreground="White" Margin="0,0,0,10"/>
        
        <!-- ip and port settings -->

        <Button Name="settings_button" Width="100" Height="100" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,25,50,0" Background="Transparent" BorderBrush="Transparent">
            <StackPanel>
                <Image Source="pack://application:,,,/client;component/images/settings_icon.png" />
            </StackPanel>
        </Button>

        <Grid Visibility="Hidden" Name="settings_panel" Width="1000" VerticalAlignment="Top" Height="600" HorizontalAlignment="Center" Background="#EEFFFFFF">
            <Border Width="400" Height="50" Margin="0,0,0,100" BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <TextBlock Text="Port:" HorizontalAlignment="Left" Width="100" FontSize="40" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="port_box" Width="300" HorizontalAlignment="Right" FontSize="30"/>
                </Grid>
            </Border>

            <Border Width="400" Height="50" Margin="0,100,0,0" BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <TextBlock Text="IP:" HorizontalAlignment="Left" Width="100" FontSize="40" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="ip_box" Width="300" Height="50" FontSize="30" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <Button Name="connectButton" Content="Connect" FontSize="30" FontWeight="Bold" Width="400" Height="75" VerticalAlignment="Bottom" Margin="0,0,0,25"/>
        </Grid>
    </Grid>
</Page>
