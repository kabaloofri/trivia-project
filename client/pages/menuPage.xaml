<Page x:Class="client.pages.menuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:client.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="menu">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/client;component/images/trivia_bg.png"/>
        </Grid.Background>
        
        <StackPanel Background="LightBlue" Width="300" HorizontalAlignment="Left">
            <Button Name ="createroom"  Content="Create Room" FontSize="35" Margin="0,150,0,0" FontWeight="Bold"/>
            <Button Name ="joinroom"  Content="Join Room" FontSize="35" Margin="0,20,0,0" FontWeight="Bold"/>
            <Button Name ="statistics"  Content="Statistics" FontSize="35" Margin="0,20,0,0" FontWeight="Bold"/>
            <Button Name="leaderboard"  Content="High scores" FontSize="35" Margin="0,20,0,0" FontWeight="Bold"/>
                <Button Name="logout_button"  Content="Log out" FontSize="35" Margin="0,20,0,0" FontWeight="Bold"/>


        </StackPanel>
        <Image Source="pack://application:,,,/client;component/images/fire.png" Width="500" Height="200" Margin="0,-500,1000,0"/>
        <Image Source="pack://application:,,,/client;component/images/ice.png" Width="500" Height="200" Margin="0,500,1000,0"/>

        <Frame Name="main_frame" Width="1000" HorizontalAlignment="Right"/>
    </Grid>
</Page>
