<UserControl x:Class="client.user_conrtols.popupError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client.user_conrtols"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">


    <UserControl.Resources>
        <Storyboard x:Key="popupAnimation">
            <DoubleAnimation
                Storyboard.TargetName="MainGrid"
                Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                From="150" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,100,0,0">
        <Grid.RenderTransform>
            <TranslateTransform Y="200"/>
        </Grid.RenderTransform>

        <Border Background="#BBFFFFFF" BorderBrush="#BB000000" BorderThickness="2">
            <TextBlock Name="errorMsg" Text="Error!" FontSize="25" Margin="100,0,0,0" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold"/>
        </Border>

        <Image Source="pack://application:,,,/client;component/images/error_icon.png" Width="75" Height="75" HorizontalAlignment="Left" Margin="20,0,0,0"/>
    </Grid>
</UserControl>